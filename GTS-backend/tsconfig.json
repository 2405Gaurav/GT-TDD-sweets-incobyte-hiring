{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node", // ✅ modern default for TS 5+
    "ignoreDeprecations": "6.0" // ✅ silences the migration warning
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
